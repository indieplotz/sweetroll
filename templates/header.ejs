<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<% var landingCatName = _.head(scope.meta.categoriesInLanding) %>
		<% var titleParts = _(scope.data.categoriesRequested)
			.filter(function (x) { return x != landingCatName })
			.map(function (x) { return scope.meta.categoryTitles[x] || _.capitalize(x) }) %>
		<title><%- _(titleParts).concat(scope.meta.siteName).value().join(' / ') %></title>
		<link rel="openid.delegate" href="${ scope.meta.baseUri }">
		<link rel="openid.server" href="https://indieauth.com/openid">
		<link rel="stylesheet" href="/bower/fontawesome/css/font-awesome.min.css">
		<link rel="stylesheet" href="/default-style.css">
		<script>
			if (!('registerElement' in document && 'import' in document.createElement('link')))
				document.write('<script src="/bower/webcomponentsjs/webcomponents-lite.min.js"></sc'+'ript>');
		</script>
		<!-- <link rel="import" href="/bower/lazyload-image/lazyload-image.html"> -->
		<link rel="import" href="/bower/indieweb-components/indie-action.html">
		<link rel="import" href="/bower/indieweb-components/fragmention-target.html">
	</head>
