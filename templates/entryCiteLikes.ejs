<% var properties = scope.entry.properties %>
<% if (!_.isEmpty(properties['like-of'])) { %>
	<div class="p-name ${ scope.addClass }">
		<div class="reference-context like-context u-like-of h-cite">
			<% _.forEach(properties['like-of'], function (like) { %>
				Liked
				<% if (_.isObject(like)) { %>
					<a class="u-url" ${ scope.showRel ? 'rel="like-of"' : '' } href="${ _.head(like.properties.url) }">
						a post
					</a>
					<% if (!_.isEmpty(like.properties.author)) { %>
						by <%= templates.citeAuthors({ authors: like.properties.author }) %>
					<% } %>

					<blockquote class="e-content">
						<%= templates.showContent({ long: false, properties: like.properties }) %>
					</blockquote>
				<% } else if (_.isString(like)) { %>
					<a class="u-url" ${ scope.showRel ? 'rel="like-of"' : '' } href="${ like }">
						<%- like %>
					</a>
				<% } else { %>
					something weird
				<% } %>
			<% }) %>
		</div>
	</div>
<% } %>
