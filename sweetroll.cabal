name:            sweetroll
version:         0.0.0
synopsis:        A micro+blogging (IndieWeb) engine with curved swords. Curved! Swords!
--description: TODO
category:        Web
homepage:        https://github.com/myfreeweb/sweetroll
author:          Greg V
copyright:       2014 Greg V <greg@unrelenting.technology>
maintainer:      greg@unrelenting.technology
license:         Apache-2.0
license-file:    COPYING
build-type:      Simple
cabal-version:   >= 1.18
extra-source-files:
    README.md
tested-with:
    GHC == 7.6.3
  , GHC == 7.8.2

source-repository head
    type: git
    location: git://github.com/myfreeweb/sweetroll.git

library
    build-depends:
        base >= 4.0.0.0 && < 5
      , classy-prelude
      , containers
      , setters
      , safe
      , either
      , transformers
      , data-default
      , text
      , bytestring
      , blaze-markup
      , blaze-builder
      , stringable
      , time
      , regex-pcre-builtin
      , aeson
      , jwt
      , gitson == 0.4.*
      , microformats2-types == 0.2.*
      , wai
      , wai-extra
      , wai-middleware-static
      , scotty == 0.9.*
      , simple-templates == 0.8.*
      , network-uri >= 2.6
      , network >= 2.6
      , http-types
      , http-client
      , http-client-tls
      , http-link-header
      , oauthenticated == 0.1.3.3
      , crypto-random
      , hxt
      , hxt-tagsoup
      , async
      , highlighting-kate
      , pandoc == 1.13.*
      , pandoc-types
      , raw-strings-qq == 1.*
    default-language: Haskell2010
    exposed-modules:
        Sweetroll.App
        Sweetroll.Auth
        Sweetroll.Conf
        Sweetroll.Micropub
        Sweetroll.Pages
        Sweetroll.Pagination
        Sweetroll.Syndication
        Sweetroll.Util
        Sweetroll.Webmention
    ghc-prof-options: -auto-all -prof
    ghc-options: -Wall
    hs-source-dirs: library

executable sweetroll
    build-depends:
        base >= 4.0.0.0 && < 5
      , classy-prelude
      , options == 1.*
      , warp == 3.0.*
      , network == 2.6.*
      , streaming-commons
      , wai-extra
      , ansi-terminal
      , directory
      , text
      , cryptohash
      , entropy
      , base64-bytestring
      , sweetroll
    default-language: Haskell2010
    ghc-prof-options: -auto-all -prof
    ghc-options: -threaded -rtsopts
    hs-source-dirs: executable
    main-is: Main.hs

test-suite documentation
    build-depends:
        base >= 4.0.0.0 && < 5
      , process == 1.*
      , regex-compat == 0.*
    default-language: Haskell2010
    hs-source-dirs: test-suite
    main-is: Haddock.hs
    type: exitcode-stdio-1.0

test-suite examples
    build-depends:
        base >= 4.0.0.0 && < 5
      , Glob == 0.*
      , doctest == 0.*
    default-language: Haskell2010
    hs-source-dirs: test-suite
    main-is: DocTest.hs
    type: exitcode-stdio-1.0

test-suite tests
    build-depends:
        base >= 4.0.0.0 && < 5
      , classy-prelude
      , sweetroll
      , http-types
      , microformats2-types
      , case-insensitive
      , wai
      , directory
      , gitson >= 0.4.1
      , wai-extra
      , bytestring
      , raw-strings-qq
      , pandoc
      , simple-templates == 0.8.*
      , aeson
      , hspec == 1.*
        , HUnit
        , QuickCheck
    default-language: Haskell2010
    ghc-options: -threaded -fhpc -Wall -Werror
    hs-source-dirs: test-suite
    main-is: Spec.hs
    other-modules:
        Sweetroll.AppSpec
        Sweetroll.PagesSpec
    type: exitcode-stdio-1.0
