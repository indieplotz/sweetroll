name:            sweetroll
version:         0.0.0
synopsis:        A micro+blogging (IndieWeb) engine with curved swords. Curved! Swords!
--description: TODO
category:        Web
homepage:        https://github.com/myfreeweb/sweetroll
author:          Greg V
copyright:       2014-2015 Greg V <greg@unrelenting.technology>
maintainer:      greg@unrelenting.technology
license:         PublicDomain
license-file:    UNLICENSE
build-type:      Simple
cabal-version:   >= 1.18
extra-source-files:
    README.md
tested-with:
    GHC == 7.10.2

source-repository head
    type: git
    location: git://github.com/myfreeweb/sweetroll.git

library
    build-depends:
        base >= 4.0.0.0 && < 5
      , classy-prelude
      , mono-traversable
      , transformers
      , transformers-base
      , mtl
      , monad-control
      , resourcet
      , lifted-base
      , containers
      , unordered-containers
      , vector
      , either
      , lens
      , setters
      , safe
      , errors
      , directory
      , data-default
      , stringable
      , bytestring-conversion
      , text
      , bytestring
      , blaze-markup
      , blaze-builder
      , blaze-html
      , time
      , lens-datetime
      , http-date
      , pcre-heavy
      , aeson
      , lens-aeson
      , jwt
      , gitson
      , microformats2-parser
      , indieweb-algorithms
      , wai
      , wai-extra
      , wai-middleware-static
      , servant
      , servant-server
      , clay
      , network-uri
      , network
      , conduit
      , conduit-combinators
      , http-types
      , http-media
      , http-client
      , http-client-tls
      , http-conduit
      , http-link-header
      , mime-types
      , html-conduit
      , xml-lens
      , crypto-random
      , async
      , highlighting-kate
      , pandoc
      , pandoc-types
      , raw-strings-qq
      , file-embed
      , filepath
      , hs-duktape
    default-language: Haskell2010
    exposed-modules:
        Sweetroll.Api
        Sweetroll.Auth
        Sweetroll.Conf
        Sweetroll.Micropub
        Sweetroll.Monads
        Sweetroll.Pages
        Sweetroll.Rendering
        Sweetroll.Routes
        Sweetroll.Style
        Sweetroll.Util
        Sweetroll.Webmention
    ghc-prof-options: -auto-all -prof
    ghc-options: -Wall
    hs-source-dirs: library

executable sweetroll
    build-depends:
        base >= 4.0.0.0 && < 5
      , classy-prelude
      , git-embed
      , cabal-file-th
      , options
      , warp
      , network
      , streaming-commons
      , wai-extra
      , ansi-terminal
      , directory
      , text
      , cryptohash
      , entropy
      , base64-bytestring
      , gitson
      , sweetroll
    default-language: Haskell2010
    ghc-prof-options: -auto-all -prof
    ghc-options: -O2 -threaded -rtsopts -with-rtsopts=-N
    hs-source-dirs: executable
    main-is: Main.hs

test-suite examples
    build-depends:
        base >= 4.0.0.0 && < 5
      , Glob
      , doctest
    default-language: Haskell2010
    hs-source-dirs: test-suite
    main-is: DocTest.hs
    type: exitcode-stdio-1.0

test-suite tests
    build-depends:
        base >= 4.0.0.0 && < 5
      , classy-prelude
      , sweetroll
      , stringable
      , errors
      , http-types
      , network-uri
      , case-insensitive
      , wai
      , directory
      , gitson
      , wai-extra
      , bytestring
      , raw-strings-qq
      , pandoc
      , lens
      , aeson
      , lens-aeson
      , data-default
      , hspec
    default-language: Haskell2010
    ghc-options: -threaded -Wall
    hs-source-dirs: test-suite
    main-is: Spec.hs
    other-modules:
        Sweetroll.ApiSpec
    type: exitcode-stdio-1.0
