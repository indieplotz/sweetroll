<% var properties = scope.entry.properties %>
<% _.forEach(properties['repost-of'], function (repost) { %>
	<div class="u-repost-of h-cite">
		<div class="reference-context repost-context">
			Repost of
			<% if (_.isObject(repost)) { %>
				<a class="u-url" ${ scope.showRel ? 'rel="repost-of"' : '' } href="${ _.head(repost.properties.url) }">a post</a>
				<% if (!_.isEmpty(repost.properties.author)) { %>
					by <%= templates.citeAuthors({ authors: repost.properties.author }) %>
				<% } %>
				<blockquote class="e-content">
					<%= templates.showContent({ long: true, properties: repost.properties }) %>
				</blockquote>
			<% } else if (_.isString(repost)) { %>
				<a class="u-url" ${ scope.showRel ? 'rel="repost-of"' : '' } href="${ repost }">
					<%- repost %>
				</a>
			<% } else { %>
				something weird
			<% } %>
		</div>
	</div>
<% }) %>
